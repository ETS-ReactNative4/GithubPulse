.profile {
  position: relative;

  width: 400px;
  height: 325px;

  background: white;
}

.update {
  color: #333;
  margin: 5px 0 0 8px;
}

@-webkit-keyframes rotate {
  from {
    -webkit-transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(360deg);
  }
}

.rotate {
  -webkit-animation: rotate 2s infinite linear;
}

.profile-title {
  height: 25px;
  padding-top: 4px;

  color: #444;
  font-size: 14px;
  text-align: center;
}

.version {
  float: right;
  margin: 2px 8px 0 0;

  color: #9a9a9a;
  font-size: 0.8em;
  font-weight: bold;
}
