.stats {
  position: absolute;
  bottom: 0;
  width: 100%;

  border-top: 1px solid #ccc;
}

.stat {
  float: left;

  width: 25%;
  padding-bottom: 10px;

  border-left: 1px solid #ccc;
  color: #444;
  text-align: center;
}

.stat__count {
  margin: 15px 0 5px 0;

  color: #4183c4;
}

.notification {
  position: relative;
  top: -10px;
  color: #a00;
  font-size: .7em;
}
